<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet', href='/stylesheets/accountstyle.css'>
    <title>patients account</title>
</head>
<body>
    <header>
      <%- include ('partials/header.ejs') %>
    </header>

    <a href="/">Go back Home</a>
    <main>
        <%- include ('partials/userNav.ejs') %>
        <div id="patientSection" style="display: block;">
            <h1>PATIENTS PORTAL</h1>

            <!-- patients signup -->
            <div class="" id="Pts" style="display: none;">
                <h3>Sign Up</h3>
                <form action="/patients/signup" method="POST">
                    <div>
                        <label for="first_name">First Name:</label>
                        <input type="text" id="first_name" name="first_name" required>
                    </div>
                    <div>
                        <label for="last_name">Last Name:</label>
                        <input type="text" id="last_name" name="last_name" required>
                    </div>
                    <div>
                        <label for="email">Email:</label>
                        <input type="email" id="email" name="email" required>
                    </div>
                    <div>
                        <label for="password">Password:</label>
                        <input type="password" id="password" name="password" required>
                    </div>
                    <button type="submit">Sign Up</button>
                    <p>Registered Patients; <a href="#" onclick="patientPtL('Ptl')">Login</a></p>
                </form>
            </div>


            <!-- patients login -->
            <div class="" id="Ptl">
                <h3>Login</h3>
                <form action="/patients/login" method="POST">
                    <div>
                        <label for="email">Email</label>
                        <input type="email" name="email" placeholder="Email" required>
                    </div>
                    <div>
                        <label for="password">Password</label>
                        <input type="password" name="password" placeholder="Password" required>
                    </div>
                    <button type="submit">Login</button>
                    <p>Not registered patients; <a href="#" onclick="patientPtS('Pts')">Create Account</a></p>
                </form>
            </div>
        </div>
    </main>

    <!-- footer section  -->
    <footer>
      <%- include ('partials/footer.ejs') %>
    </footer>

    <script>
        // patients signup
        function patientPtS() {
            document.getElementById("patientSection").style.display = "block";
            document.getElementById("Ptl").style.display = "none";
            document.getElementById("Pts").style.display = "block";
        }
        
        // patient login
        function patientPtL() {
            document.getElementById("patientSection").style.display = "block";
            document.getElementById("Pts").style.display = "none";
            document.getElementById("Ptl").style.display = "block";
        }
    </script>
</body>
</body>
</html>